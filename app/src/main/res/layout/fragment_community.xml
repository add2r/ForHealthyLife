<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_community"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D3D3D3"
    android:backgroundTint="#F5F5F5"
    tools:context=".ui.community.CommunityFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollViewCommunity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/community_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/ic_profile_barbackground"
                android:gravity="center"
                android:text="자유게시판"
                android:textColor="#0288D1"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ListView
                android:id="@+id/community_board"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:divider="@null">

            </ListView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Space
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_registercontent"
                    android:gravity="center"
                    android:text="        글 쓰기"
                    android:textColor="#474747"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Space
                    android:layout_width="155dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</FrameLayout>