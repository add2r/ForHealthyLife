<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDFDF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_running_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@drawable/ic_profile_barbackground"
        android:gravity="center"
        android:text="한 걸음 한 걸음 걸어보아요"
        android:textColor="@android:color/holo_green_light"
        android:textSize="20sp"
        android:textStyle="bold" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="400dp">

        <TextView
            android:id="@+id/tv_running_stepCount"
            android:layout_width="300dp"
            android:layout_height="275dp"
            android:background="@drawable/ic_running_background"
            android:gravity="center"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="60sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_resetStepCount"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_profile_changegenbtn"
            android:text="초기화"
            android:textColor="#4C4C4C"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_saveStepCount"
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_profile_changegenbtn"
            android:text="저장"
            android:textColor="#4C4C4C"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>